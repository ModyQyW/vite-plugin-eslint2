{
  "name": "monorepo",
  "version": "0.0.0",
  "private": true,
  "homepage": "https://github.com/ModyQyW/vite-plugin-eslint2",
  "bugs": {
    "url": "https://github.com/ModyQyW/vite-plugin-eslint2/issues"
  },
  "repository": "git+https://github.com/ModyQyW/vite-plugin-eslint2.git",
  "license": "MIT",
  "author": {
    "name": "ModyQyW",
    "email": "wurui.dev@gmail.com",
    "url": "https://modyqyw.top"
  },
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "rimraf packages/*/dist --glob && pnpm -r --filter=./packages/* run build && pnpm -r run build-post",
    "check": "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "dep-update": "taze -fw",
    "dev": "pnpm -r --filter=./packages/* --parallel run dev",
    "docs:build": "pnpm -C docs run build",
    "docs:dev": "pnpm -C docs run dev",
    "docs:preview": "pnpm -C docs run preview",
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || simple-git-hooks",
    "prepublishOnly": "pnpm run build",
    "release": "lerna version",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --passWithNoTests --coverage",
    "type-check": "tsc --noEmit",
    "preversion": "git-branch-is main && conc \"pnpm:check\" \"pnpm:type-check\" \"pnpm:test\""
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/config-pnpm-scopes": "^19.8.1",
    "@lerna-lite/cli": "^4.4.1",
    "@lerna-lite/version": "^4.4.1",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "git-branch-is": "^4.0.0",
    "is-ci": "^4.1.0",
    "lint-staged": "^16.1.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.0",
    "taze": "^19.1.0",
    "tsdown": "^0.12.8",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.2",
  "engines": {
    "node": ">=20.11.0 || >=21.2.0"
  }
}
